[sub_resource type="GDScript" id="GDScript_qyuc3"]
script/source = "extends CanvasLayer

@onready var message_label = $MessageLabel1
@onready var background = $Background

# ฟังก์ชันที่ถูกเรียกเมื่อ Node เข้าสู่ต้นไม้ของซีนครั้งแรก
func _ready() -> void:
	message_label.text = \"You are the winner\"  # แสดงข้อความเมื่อจบเกม
	set_process_input(true)  # เปิดการประมวลผลการกดปุ่ม

# ฟังก์ชันที่ถูกเรียกทุกเฟรม 'delta' คือเวลาที่ผ่านไปตั้งแต่เฟรมก่อนหน้า
func _process(delta: float) -> void:
	pass

# ฟังก์ชันที่ใช้ฟังเหตุการณ์จากการกดปุ่ม
func _input(event) -> void:
	# ตรวจสอบว่าเหตุการณ์เป็นการกดปุ่ม
	if event is InputEventKey:
		if event.pressed:  # ถ้าปุ่มถูกกด
			# ตรวจสอบการกดปุ่ม ENTER หรือ SPACE
			if event.scancode == KEY_ENTER or event.scancode == KEY_SPACE:
				_restart_game()

# ฟังก์ชันที่ใช้ในการเริ่มต้นเกมใหม่
func _restart_game() -> void:
	get_tree().reload_current_scene()  # โหลดซีนปัจจุบันใหม่ (level_06.tscn)
"

